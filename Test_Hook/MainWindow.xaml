<Window x:Class="Test_Hook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_Hook"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="600" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" Deactivated="Window_Deactivated">
    <Grid>
        <TextBlock Name="tBox" Text="当前输入已锁定，双击解锁！" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="btnExit" Content="关闭" Width="40" Height="30" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Top" Click="btnExit_Click"/>
    </Grid>
</Window>
